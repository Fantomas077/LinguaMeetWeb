@using LinguaMeet.Domain.Entities
@using Microsoft.AspNetCore.Identity
@model LinguaMeet.Domain.ViewModels.RegisterVM
@inject UserManager<ApplicationUser> _userManager

@{
    ViewData["Title"] = "Registrieren";
}

<div class="d-flex justify-content-center align-items-center my-3" style="background: #e8f1ff;">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px; background: #BABBB1;">

        <h2 class="text-center mb-4 fw-bold text-primary">Konto erstellen</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Ihr Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">E‑Mail‑Adresse</label>
                <input asp-for="Email" class="form-control" placeholder="z. B. name@mail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Passwort</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Passwort eingeben" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold">Passwort bestätigen</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Passwort wiederholen" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary py-2 fw-semibold">Registrieren</button>
            </div>

            <!-- Login Link -->
            <div class="text-center">
                <a asp-action="Login" class="text-decoration-none text-secondary">
                    Bereits ein Konto? Jetzt einloggen
                </a>
            </div>
        </form>
    </div>
</div>
